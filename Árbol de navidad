#include <iostream>
#include <stdio.h>

using namespace std;

int main() {
    
    int N;
    scanf("%d", &N);
    int lim = 1;
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j <N -i -1 ; j++)
        {
            printf(" ");
        }
        //Console.Write("*");
        for (int j = 0; j <lim; j++)
        {
            printf("*");
        }
        lim += 2;
        printf("\n");
    }

    for (int i = 0; i < lim/2-2; i++)
    {
        printf(" ");
    }
    printf("###\n");
    for (int i = 0; i < lim/2-2; i++)
    {
        printf(" ");
    }
    printf("###");

    system("pause");

 return 0;   
}


