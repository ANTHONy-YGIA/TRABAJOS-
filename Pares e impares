#include <iostream>
#include <stdio.h>
#include <vector>

#include <conio.h>

using namespace std;


int main() {
  
  
  int N;
  scanf("%d", &N);
  
  int pares = 0, impares = 0;
  
  for(int i =0; i < N; i++) {
        
        int num;
        scanf("%d", &num);
        
        if(num %2==0) {
            pares ++;
        } else {
            impares ++;
        }
    }
  
    printf("%d %d\n", pares, impares);
  
  getch();
    
  return 0;   
}
