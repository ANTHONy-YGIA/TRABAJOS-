#include <iostream>
#include <stdio.h>

using namespace std;

int main() {
    
    int p;
    cin >> p;
    
    int n;
    cin >> n;
    
    int sum =0;
    for(int i =0; i<n; i++) {
       int x;
       cin >> x;
       sum += x;
    }
    
    printf("%d %d\n", (int)(sum / p), sum%p); 
    
   // system("pause");
    
    return 0;   
}
